<br>
<h2>Manage Employees</h2>
<hr>
<div class="row">
  <div class="col-xs-12 col-md-8">
    <div class="filters">
      <select class="employees-filter">
        <option value="all">View All</option>
        <option value="assigned">View Admins</option>
        <option value="not-assigned">View Custodians</option>
        <option value="not-assigned">View Employees</option>
      </select>
      <script>
      $('.employees-filter').selectpicker();
      </script>
    </div>
  </div>
  <div class="col-xs-6 col-md-4">
    <button class="btn btn-add pull-right" data-toggle="modal" data-target="#add-modal">
      <span class="glyphicon glyphicon-plus-sign"></span> New Employee </button>
    <!-- Modal -->
    <div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- FORM -->
          <form role="form" id="add-form">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Add New Employee</h4>
            </div>
            <div class="modal-body">

              <div class="form-group row">
                <div class="col-xs-4">
                  <label for="first_name">First Name</label>
                  <input type="text" class="form-control" id="first_name">
                </div>
                <div class="col-xs-4">
                  <label for="middle_name">Middle Name</label>
                  <input type="text" class="form-control" id="middle_name">
                </div>
                <div class="col-xs-4">
                  <label for="last_name">Last Name</label>
                  <input type="text" class="form-control" id="last_name">
                </div>
              </div>
              <div class="form-group">
                <label for="description">Address</label>
                <input type="text" class="form-control" id="address">
              </div>
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="status">Gender</label>
                  <select class="gender-picker" id="gender">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>
                  <script>
                  $('.gender-picker').selectpicker();
                  </script>
                </div>
                <div class="col-xs-6">
                  <label for="birthdate">Date of Birth</label>
                  <input type="text" class="form-control birthdate" id="date_of_birth">
                  <script>
                  var nowTemp = new Date();
                  var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

                  $('.birthdate').datepicker({
                    autoclose: true,
                    endDate: new Date
                    // onRender: function(date) {
                    //   return date.valueOf() > now.valueOf() ? 'disabled' : '';
                    // }
                  });
                  </script>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-xs-6">
                  <label for="status">User Role</label>
                  <select class="role-picker" id="user_role">
                    <option value="admin">Admin</option>
                    <option value="custodian">Custodian</option>
                    <option value="employee">Employee</option>
                  </select>
                  <script>
                  $('.role-picker').selectpicker();
                  </script>
                </div>
                <div class="col-xs-6">
                  <label for="employeddate">Date Employed</label>
                  <input type="text" class="form-control employeddate" id="date_employed">
                  <script>
                    var nowTemp = new Date();
                    var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);

                    $('.employeddate').datepicker({
                      autoclose: true,
                      endDate: new Date
                      // onRender: function(date) {
                      //   return date.valueOf() > now.valueOf() ? 'disabled' : '';
                      // }
                    });
                  </script>
                </div>
              </div>
              <div class="form-group">
		            <label for="email">Email Address <span class="email-error">- email address is taken!</span></label>
		            <input type="email" class="form-control" id="email" placeholder="your.name@globalzeal.net">
              </div>
            </div>
            <div class="modal-footer">
  	          <div class="btns">
  		          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
  		          <button type="submit" class="btn btn-add">
  		            <span class="glyphicon glyphicon-ok-sign"></span> Add Employee
  		          </button>
  		          <button type="submit" class="btn btn-add btn-load" disabled>Please wait..</button>
              </div>
            </div>
          </form>
          <!-- FORM END -->
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
  </div>
</div>

<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<!-- Reset Modal -->
<div class="modal fade" id="reset-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- FORM -->
      <form role="form" id="editForm">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Reset Employees Password</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" class="form-control" id="email" placeholder="name@globalzeal.net">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-reset">
            <span class="glyphicon glyphicon-ok-sign"></span> Reset Password </button>
        </div>
      </form>
      <!-- FORM END -->
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>

<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Assets</th>
      <th>Full Name</th>
      <th>Date of Birth</th>
      <th>Date Employed</th>
      <th>Email</th>
      <th>Role</th>
      <th style="text-align:center">Actions</th>
    </tr>
  </thead>
  <tbody class="employees-list">
  </tbody>
</table>

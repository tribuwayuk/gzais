<div class="modal-dialog">
  <div class="modal-content">
    <form role="form" id="editForm">
      <div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h4 class="modal-title" id="myModalLabel">Edit Employee</h4>
      </div>
      <div class="modal-body">

	<div class="form-group row">
	  <div class="col-xs-4">
	    <label for="first_name">First Name</label>
	    <input type="text" class="form-control" id="first_name" value="<%= model.get('first_name') %>">
	  </div>
	  <div class="col-xs-4">
	    <label for="middle_name">Middle Name</label>
	    <input type="text" class="form-control" id="middle_name" value="<%= model.get('middle_name') %>">
	  </div>
	  <div class="col-xs-4">
	    <label for="last_name">Last Name</label>
	    <input type="text" class="form-control" id="last_name" value="<%= model.get('last_name') %>">
	  </div>
	</div>
	<div class="form-group">
	  <label for="description">Address</label>
	  <input type="text" class="form-control" id="address" value="<%= model.get('address') %>">
	</div>
	<div class="form-group row">
	  <div class="col-xs-6">
	    <label for="status">Gender</label>
	    <select class="gender-picker" id="gender" >
	      <option>Male</option>
	      <option>Female</option>
	    </select>
	    <script>
	      $('.gender-picker').selectpicker();
	    </script>
	  </div>
	  <div class="col-xs-6">
	    <label for="birthdate">Date of Birth</label>
	    <input type="text" class="form-control birthdate" id="date_of_birth" value="<%= model.get('date_of_birth') %>">
	    <script>
	      $('.birthdate').datepicker();
	    </script>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-6">
	    <label for="status">User Role</label>
	    <select class="role-picker" id="user_role">
	      <option>Admin</option>
	      <option>Custodian</option>
	      <option>Employee</option>
	    </select>
	    <script>
	    $('.role-picker').selectpicker();
	    </script>
	  </div>
	  <div class="col-xs-6">
	    <label for="employeddate">Date Employed</label>
	    <input type="text" class="form-control employeddate" id="date_employed" value="<%= model.get('date_employed') %>">
	    <script>
	    $('.employeddate').datepicker();
	    </script>
	  </div>
	</div>
	<div class="form-group">
	  <label for="email">Email Address</label>
	  <input type="text" class="form-control" id="email" placeholder="name@globalzeal.net" value="<%= model.get('email') %>">
	</div>

      </div>
      <div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	<button type="submit" class="btn btn-edit">
	  <span class="glyphicon glyphicon-ok-sign"></span> Save Changes</button>
      </div>
    </form>
  </div>
</div>
<% if(model) { %>
<header class="header">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <% var title = model.get('title') === undefined ? 'ais' : model.get('title'); %>
            <a href="/" class="main-title navbar-brand">
                <%= title %>
            </a>
            <ul class="nav navbar-nav navbar-right">
                <% if (model.get('user')) { %>
                    <li>
                        <p class="navbar-text navbar-right">
                        	Logged in as <strong><%= model.get('user').first_name + ' ' + model.get('user').last_name  %></strong>
                        </p>
                    </li>
				    <li class="dropdown">
						<a class="dropdown-toggle" href="" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> Change Password</a>
							<div class="dropdown-menu change-password-form">
								<form method="post" accept-charset="UTF-8" class="change-password">
									<div class="alert alert-danger hidden">
										<span class="change-password-error"></span>
									</div>
									<div class="form-group">
										<label class="form-control-label">Old Password</label>
										<input id="old_password" class="form-control" type="password" placeholder="Old Password" size="30" />
									</div>
									<div class="form-group">
										<label class="form-control-label">New Password</label>
										<input id="new_password" class="form-control" type="password" placeholder="New Password" size="30" />
									</div>
									<div class="form-group">
										<label class="form-control-label">Verify Password</label>
										<input id="con_password" class="form-control" type="password" placeholder="Verify Password" size="30" />
									</div>
									<div class="form-group btn-settings">
										<div class="btns">
											<button type="submit" class="btn btn-primary">
												<span class="glyphicon glyphicon-circle-arrow-right"></span> Save Changes
											</button>
											<button type="submit" class="btn btn-add btn-load" disabled> Please wait.. </button>
										</div>
									</div>
								</form>
							</div>
					</li>
                    <li>
                        <a href="#logout" class="logout">
                            <span class="glyphicon glyphicon-log-out"></span> Log Out </a>
                    </li>
                    <% } else { %>
                        <li>
                            <p class="navbar-text navbar-right">You are currently not
                                <strong>Logged In</strong>
                            </p>
                        </li>
                    <% } %>
            </ul>
    </nav>
</header>

<div class="main">
    <div class="container">

    </div>
</div>

<div class="footer">
    <div class="container">
        <p class="muted credit pull-left">Copyright 2013
            <a href="<%= model.get('company').url %>">
                <%= model.get('company').name %>
            </a>and
            <a href="<%= model.get('team').url %>">
                <%= model.get('team').name %>
            </a>.</p>
        <p class="muted credit pull-right"><a href="/help">Help</a> / <a href="/faq">FAQ</a> / <a href="/tos">Contact Us</a>
        </p>
    </div>
</div>
<% } %>
